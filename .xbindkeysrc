# NOTE: all keys in /usr/include/X11/keysymdef.h
# XK_ not needed

# Key specification:
# $ xbindkeys --key
# $ xbindkeys --multikey

# Format:
#    "command to start"
#       associated key

# Modifiers:
#   Release, Control, Shift, Mod1 (Alt), Mod2 (NumLock),
#   Mod3 (CapsLock), Mod4, Mod5 (Scroll).

#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

"maim -s -u | xclip -selection clipboard -t image/png -i"
    Print

# Increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +1000"
   XF86AudioRaiseVolume

# Decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -1000"
   XF86AudioLowerVolume

# Mute volume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
   XF86AudioMute

# Play / Pause
"playerctl -p spotify,%any play-pause"
   XF86AudioPlay

"playerctl -p spotify,%any play-pause"
   XF86AudioPause

"playerctl -p spotify,%any play-pause"
   KP_Begin

"playerctl -p spotify,%any previous"
   XF86AudioPrev

"playerctl -p spotify,%any previous"
   KP_Left

"playerctl -p spotify,%any next"
   XF86AudioNext

"playerctl -p spotify,%any next"
   KP_Right

"xdotool mousemove_relative -- 0 -15"
   Control+Shift+Mod4 + k

"xdotool mousemove_relative -- 0 15"
   Control+Shift+Mod4 + j

"xdotool mousemove_relative -- 15 0"
   Control+Shift+Mod4 + l

"xdotool mousemove_relative -- -15 0"
   Control+Shift+Mod4 + h

"xdotool click 1"
   Control+Shift+Mod4 + i

"~/.xmonad/scripts/owo-upload.sh"
   Shift + Print
