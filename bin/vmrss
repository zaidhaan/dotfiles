#!/usr/bin/env zsh

if [[ $# -eq 0 ]]; then
    echo "usage: ${0:t} <pidlist>"
    exit 1
fi

if ! kill -0 "$@" &>/dev/null; then
    echo "error: invalid process ID(s)"
    exit 1
fi

# $1= pid
print_vmrss() {
    res=(${(s: :):-$(ps -p $1 -o pid=,rss=,comm=)})
    res[2]=$((res[2] / 1024.0))
    printf '%s(%s): %s MB\n' "${res[3,-1]:-}" ${res[1]:-$1} ${res[2]:-0}
    REPLY=res[2]
}

# $1= idx
print_spc() {
    printf "${(l:$(($1*2)):: :)}"
}

# $1= idx, $2=pid
run() {
    print_spc $1
    print_vmrss $2
    total=$((total + REPLY))
    for child in $(pgrep -P $2); do
        run $(($1+1)) $child
    done
}

idx=0
total=0
pids=("$@")
for pid in $pids; do
    run $idx $pid
done
printf 'total: %s MB\n' $total

